---
interface Props {
  link: string;
  company: string;
  position: string;
  duration: string;
  descriptions: string[];
}

const { link, company, position, duration, descriptions } = Astro.props;
---

<div class="relative pl-8 py-6 group">
  <div class="font-medium text-secondary mb-1 sm:mb-0">
    <a
      href={link}
      target="_blank"
      rel="noopener"
      class="relative inline-block group/experience"
    >
      {company}
      <span
        class="absolute bottom-0 left-0 w-full h-0.5 bg-secondary origin-left transform scale-x-0 transition-transform duration-300 ease-out group-hover/experience:scale-x-100"
      >
      </span>
    </a>
  </div>
  <div
    class="flex flex-col items-start mb-1 group-last:before:hidden before:absolute before:left-2 sm:before:left-0 before:h-full before:px-px before:bg-primary sm:before:ml-[0.5rem] before:self-start before:-translate-x-1/2 before:translate-y-3 after:absolute after:mt-1 after:left-2 sm:after:left-0 after:w-4 after:h-4 after:bg-primary after:box-content after:rounded-full sm:after:ml-[0.5rem] after:-translate-x-1/2 after:translate-y-1.5"
  >
    <div class="text-xl font-bold">
      {position}
    </div>
    <div class="text-sm text-secondary">
      {duration}
    </div>
  </div>
  <div class="text-slate-300">
    {descriptions.map((desc) => <p>{desc}</p>)}
  </div>
</div>
