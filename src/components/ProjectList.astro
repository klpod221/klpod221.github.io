---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import MySlider from "./MySlider.astro";
import projects from "../data/projects.json";
---

<MySlider items={projects} className="w-full max-w-7xl mx-auto">
  {
    projects.map((project) => (
      <a
        href={project.link}
        target="_blank"
        rel="noopener"
        class="slide min-w-full px-2 flex-shrink-0 max-w-full w-[50rem]"
        data-github={project.github}
      >
        <div class="group relative col-span-3 flex flex-col justify-between overflow-hidden rounded-xl transform-gpu bg-background [border:1px_solid_rgba(255,255,255,.1)] [box-shadow:0_-20px_80px_-20px_#ffffff1f_inset] min-h-[300px] md:min-h-[400px] lg:min-h-[500px] custom">
          <div>
            <Image
              src={project.image}
              alt={project.title}
              class="absolute left-0 top-0 h-full w-full border-none transition-all duration-300 ease-out opacity-70 [mask-image:linear-gradient(to_top,transparent_20%,#000_100%)] group-hover:scale-105 object-cover"
              width={800}
              height={500}
            />
          </div>

          {/* Container cho stats, mặc định ẩn (opacity-0 hoặc hidden) và sẽ hiện lên bằng JS */}
          <div class="absolute top-4 right-4 z-20 flex gap-2 transition-opacity duration-300 opacity-0 js-stats-container">
            <span class="flex items-center gap-1 px-2.5 py-1 rounded-lg bg-black/40 border border-white/20 text-white text-xs font-medium shadow-sm">
              <Icon name="mdi:star" class="w-4 h-4 text-yellow-500" />
              <span class="font-semibold js-stars">0</span>
            </span>
            <span class="flex items-center gap-1 px-2.5 py-1 rounded-lg bg-black/40 border border-white/20 text-white text-xs font-medium shadow-sm">
              <Icon name="mdi:source-fork" class="w-4 h-4 text-blue-500" />
              <span class="font-semibold js-forks">0</span>
            </span>
          </div>

          <div class="pointer-events-none z-10 flex transform-gpu flex-col gap-1 p-6 transition-all duration-300 group-hover:-translate-y-10">
            <h2 class="text-xl font-semibold">{project.title}</h2>
            <p class="mt-1">{project.description}</p>
          </div>

          <div class="pointer-events-none absolute bottom-0 flex w-full translate-y-10 transform-gpu flex-row items-center p-4 opacity-0 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100 ml-2">
            <div class="pointer-events-auto bg-primary rounded-lg py-1 px-2 text-xs text-black flex gap-2 items-center cursor-pointer hover:bg-white/80 transition-colors">
              Learn more
              <Icon name="mdi:arrow-right" class="w-4 h-4" />
            </div>
          </div>

          <div class="pointer-events-none absolute inset-0 transform-gpu transition-all duration-300 group-hover:bg-black/[.03] group-hover:dark:bg-neutral-800/10" />
        </div>
      </a>
    ))
  }
</MySlider>

<script>
  const CACHE_DURATION = 30 * 60 * 1000;

  const parseGitHubUrl = (url) => {
    if (!url) return null;
    const match = url.match(/github\.com\/([^\/]+)\/([^\/]+)/);
    if (match) {
      return { owner: match[1], repo: match[2] };
    }
    return null;
  };

  const getCachedStats = (key) => {
    const cached = localStorage.getItem(key);
    if (!cached) return null;

    try {
      const data = JSON.parse(cached);
      const now = Date.now();
      if (now - data.timestamp > CACHE_DURATION) {
        return null;
      }
      return data.stats;
    } catch (e) {
      return null;
    }
  };

  const setCachedStats = (key, stats) => {
    const data = {
      timestamp: Date.now(),
      stats: stats,
    };
    localStorage.setItem(key, JSON.stringify(data));
  };

  const fetchAndDisplayStats = async () => {
    const projectSlides = document.querySelectorAll(".slide[data-github]");

    projectSlides.forEach(async (slide) => {
      const githubUrl = slide.getAttribute("data-github");
      const parsed = parseGitHubUrl(githubUrl);

      if (!parsed) return;

      const cacheKey = `gh_stats_${parsed.owner}_${parsed.repo}`;
      const statsContainer = slide.querySelector(".js-stats-container");
      const starsEl = slide.querySelector(".js-stars");
      const forksEl = slide.querySelector(".js-forks");

      let stats = getCachedStats(cacheKey);

      if (!stats) {
        try {
          const response = await fetch(
            `https://api.github.com/repos/${parsed.owner}/${parsed.repo}`
          );
          if (response.ok) {
            const data = await response.json();
            stats = {
              stars: data.stargazers_count || 0,
              forks: data.forks_count || 0,
            };
            setCachedStats(cacheKey, stats);
          }
        } catch (error) {
          console.error(`Failed to fetch stats for ${parsed.repo}`, error);
        }
      }

      if (stats && statsContainer && starsEl && forksEl) {
        starsEl.textContent = stats.stars;
        forksEl.textContent = stats.forks;
        statsContainer.classList.remove("opacity-0");
      }
    });
  };

  document.addEventListener("astro:page-load", fetchAndDisplayStats);
  document.addEventListener("DOMContentLoaded", fetchAndDisplayStats);
</script>
